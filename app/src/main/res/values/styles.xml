<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light" />

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="below_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/none_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">#FFF</item>
    </style>

    <style name="alertDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/none_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 头像 -->
    <style name="headShotCircleView">
        <item name="android:scaleType">centerCrop</item>
        <item name="com.loosoo100.campus100:border_color">@color/none_color</item>
        <item name="com.loosoo100.campus100:border_width">0dp</item>
    </style>

    <!-- 星星 -->
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
    </style>

    <!-- 这个是加入的代码 -->
    <style name="popupwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/show_from_bottom</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/hide2bottom</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">

        <item name="android:button">@drawable/de_pic_checkbox</item>

    </style>
    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>