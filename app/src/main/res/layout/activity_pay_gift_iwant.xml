<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_fd3c49" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_menuBar"
        android:background="@color/red_fd3c49" >

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/height_menuBar"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_back_white" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="确认订单"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_topbar" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.loosoo100.campus100.view.AbScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/ll_receiptAddress"
                            android:layout_width="match_parent"
                            android:layout_height="73dp"
                            android:background="@color/white"
                            android:clickable="true"
                            android:gravity="center_vertical" >

                            <ImageView
                                android:layout_width="19dp"
                                android:layout_height="19dp"
                                android:layout_margin="20dp"
                                android:background="@drawable/icon_location_pay" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:text="请选择收货地址"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:id="@+id/ll_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/white"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical" >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical" >

                                        <TextView
                                            android:id="@+id/tv_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="小马哥"
                                            android:textColor="@color/black"
                                            android:textSize="16sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:text="电话:"
                                            android:textColor="@color/black"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/tv_tel"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:text="13400001111"
                                            android:textColor="@color/red_fd3c49"
                                            android:textSize="12sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center_vertical" >

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="地址:"
                                            android:textColor="@color/black"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/tv_address"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:text="广东省广州市天河区001号"
                                            android:textColor="@color/red_fd3c49"
                                            android:textSize="12sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="15dp"
                                android:gravity="center"
                                android:scaleY="2"
                                android:text=">"
                                android:textColor="@color/line_below" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/xinfeng" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_line"
                            android:background="@color/gray_efefee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="93dp"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/iv_goodsIcon"
                                android:layout_width="79dp"
                                android:layout_height="79dp"
                                android:layout_marginLeft="7dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/imgloading" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:paddingRight="15dp" >

                                <TextView
                                    android:id="@+id/tv_goodsName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:paddingRight="40dp"
                                    android:text="旺仔牛奶"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_goodsAttr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginRight="50dp"
                                    android:layout_marginTop="45dp"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:text="商品属性"
                                    android:textColor="@color/gray_767779"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_goodsCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="40dp"
                                    android:text="数量x1"
                                    android:textColor="@color/gray_767779"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_goodsPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="10dp"
                                    android:text="￥48.5"
                                    android:textColor="@color/red_fd3c49"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <include layout="@layout/line_gray" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="53dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="数量"
                                android:textColor="@color/gray_767779" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <ImageButton
                                    android:id="@+id/ib_reduce"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/selector_btn_reduce" />

                                <TextView
                                    android:id="@+id/tv_goodsCountOrder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:gravity="center_horizontal"
                                    android:minWidth="18dp"
                                    android:text="1"
                                    android:textSize="@dimen/textsize_list" />

                                <ImageButton
                                    android:id="@+id/ib_add"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/selector_btn_add" />
                            </LinearLayout>
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_line"
                            android:layout_marginLeft="11dp"
                            android:layout_marginRight="11dp"
                            android:background="@color/gray_efefee" />

                        <LinearLayout
                            android:id="@+id/ll_payByMyself"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/selector_ll"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="自己付款"
                                android:textColor="@color/gray_767779"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/iv_select_self"
                                android:layout_width="19dp"
                                android:layout_height="19dp"
                                android:layout_marginRight="15dp"
                                android:gravity="center"
                                android:src="@drawable/icon_select" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_payByFriend"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/selector_ll"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="朋友帮忙凑一凑"
                                android:textColor="@color/gray_767779"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/iv_select_friend"
                                android:layout_width="19dp"
                                android:layout_height="19dp"
                                android:layout_marginRight="15dp"
                                android:gravity="center"
                                android:src="@drawable/icon_select_not" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="7dp"
                            android:background="@color/gray_efefee" />

                        <LinearLayout
                            android:id="@+id/ll_redPaper"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@drawable/selector_ll"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="红包"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_list" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="无可用红包"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="15dp"
                                android:gravity="center"
                                android:scaleY="2"
                                android:text=">"
                                android:textColor="@color/line_below" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="7dp"
                            android:background="@color/gray_efefee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="备注"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_list" />

                            <EditText
                                android:id="@+id/et_remark"
                                android:layout_width="match_parent"
                                android:layout_height="49dp"
                                android:layout_marginBottom="3dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/shape_edit_remark"
                                android:gravity="top"
                                android:padding="5dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="7dp"
                            android:background="@color/gray_efefee" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="29dp"
                            android:background="@color/white" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:text="商品金额"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="15dp"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:text="￥48.5"
                                android:textColor="@color/red_fd3c49"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="29dp"
                            android:background="@color/white" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:text="运费"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_expressFee"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="15dp"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:text="￥3"
                                android:textColor="@color/red_fd3c49"
                                android:textSize="14sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.loosoo100.campus100.view.AbScrollView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="需支付："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_list" />

                <TextView
                    android:id="@+id/tv_totalMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥48.5"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_list" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_sure_pay"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/red_fd3c49"
                android:text="确认订单"
                android:textColor="@android:color/white" >
            </Button>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_efefee" />
        </RelativeLayout>

        <include
            android:id="@+id/progress"
            layout="@layout/progress"
            android:visibility="gone" />

        <include
            android:id="@+id/progress_update"
            layout="@layout/progress_update_blackbg"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>