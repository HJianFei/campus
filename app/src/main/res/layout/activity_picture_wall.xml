<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FEEFC6"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_menuBar"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/height_menuBar"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_back_black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="100dp" >

            <TextView
                android:id="@+id/tv_school"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="广州大学"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_topbar" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/tv_school"
                android:src="@drawable/shape_triangle_black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_manager"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dp"
                android:text="参与管理"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@color/none_color"
                    android:clickable="true" />

                <RelativeLayout
                    android:id="@+id/rl_click"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:clickable="true" />

                <include
                    android:id="@+id/rl_img01"
                    layout="@layout/item_picture_wall_home01"
                    android:visibility="gone" />

                <include
                    android:id="@+id/rl_img02"
                    layout="@layout/item_picture_wall_home02"
                    android:visibility="gone" />

                <include
                    android:id="@+id/rl_img03"
                    layout="@layout/item_picture_wall_home03"
                    android:visibility="gone" />

                <include
                    android:id="@+id/rl_img04"
                    layout="@layout/item_picture_wall_home04"
                    android:visibility="gone" />

                <include
                    android:id="@+id/rl_img05"
                    layout="@layout/item_picture_wall_home05"
                    android:visibility="gone" />

                <include
                    android:id="@+id/rl_img06"
                    layout="@layout/item_picture_wall_home06"
                    android:visibility="gone" />

                <include
                    android:id="@+id/rl_img07"
                    layout="@layout/item_picture_wall_home07"
                    android:visibility="gone" />

                <include
                    android:id="@+id/rl_img08"
                    layout="@layout/item_picture_wall_home08"
                    android:visibility="gone" />

                <include
                    android:id="@+id/rl_img09"
                    layout="@layout/item_picture_wall_home09"
                    android:visibility="gone" />

                <include
                    android:id="@+id/rl_img10"
                    layout="@layout/item_picture_wall_home10"
                    android:visibility="gone" />

                <include
                    android:id="@+id/rl_img11"
                    layout="@layout/item_picture_wall_home11"
                    android:visibility="gone" />

                <include
                    android:id="@+id/rl_img12"
                    layout="@layout/item_picture_wall_home12"
                    android:visibility="gone" />

                <include
                    android:id="@+id/rl_img13"
                    layout="@layout/item_picture_wall_home13"
                    android:visibility="gone" />

                <include
                    android:id="@+id/rl_img14"
                    layout="@layout/item_picture_wall_home14"
                    android:visibility="gone" />

                <include
                    android:id="@+id/rl_img15"
                    layout="@layout/item_picture_wall_home15"
                    android:visibility="gone" />
            </RelativeLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/iv_finger"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="200dp"
            android:visibility="gone"
            android:src="@drawable/icon_finger" />

        <ImageButton
            android:id="@+id/ib_add"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_picture_wall_add" />

        <include
            android:id="@+id/progress"
            layout="@layout/progress"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>