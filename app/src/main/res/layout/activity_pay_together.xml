<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_fd3c49" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_menuBar"
                android:background="@color/red_fd3c49" >

                <RelativeLayout
                    android:id="@+id/rl_back"
                    android:layout_width="@dimen/height_menuBar"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/icon_back_white" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="凑一凑"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textsize_topbar" />
            </RelativeLayout>

            <com.loosoo100.campus100.view.AbScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_line"
                            android:background="@color/gray_efefee" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="93dp"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/iv_goodsIcon"
                                android:layout_width="79dp"
                                android:layout_height="79dp"
                                android:layout_marginLeft="7dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/imgloading" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:paddingRight="15dp" >

                                <TextView
                                    android:id="@+id/tv_goodsName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:maxLines="3"
                                    android:paddingRight="40dp"
                                    android:text="旺仔牛奶"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_goodsCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="45dp"
                                    android:text="数量x1"
                                    android:textColor="@color/gray_767779"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_goodsPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="70dp"
                                    android:text="￥48.5"
                                    android:textColor="@color/red_fd3c49"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <include layout="@layout/line_gray" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_line"
                            android:layout_marginLeft="11dp"
                            android:layout_marginRight="11dp"
                            android:background="@color/gray_efefee" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/gray_f8f8f8" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <EditText
                                android:id="@+id/et_remark"
                                android:layout_width="match_parent"
                                android:layout_height="78dp"
                                android:background="@color/white"
                                android:gravity="top"
                                android:hint="钱不够？情来凑！有情人来帮人家凑一凑"
                                android:maxLength="20"
                                android:padding="5dp"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_wordCount"
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:gravity="right"
                                android:paddingRight="10dp"
                                android:text="0/20"
                                android:textColor="@color/gray_767779"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/gray_f8f8f8" />
                    </LinearLayout>
                </LinearLayout>
            </com.loosoo100.campus100.view.AbScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_sure_pay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/red_fd3c49"
                android:text="找人帮付"
                android:textColor="@android:color/white" >
            </Button>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>