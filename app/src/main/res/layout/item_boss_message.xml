<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/ll_person"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@drawable/selector_ll"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="12dp" >

            <com.loosoo100.campus100.view.CircleView
                android:id="@+id/iv_picture"
                style="@style/headShotCircleView"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@drawable/imgloading"
                app:border_color="@color/red_fd3c49"
                app:border_width="2dp" />

            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="4dp"
                android:src="@drawable/icon_male_picture" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="校园超市"
                    android:textColor="@color/black_373737"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_red"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/shape_circle_red" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:20"
                    android:textColor="@color/gray_a1a1a1"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="您的商品正在派送中"
                android:textColor="@color/gray_a1a1a1"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_system"
        android:layout_width="match_parent"
        android:layout_height="82.5dp"
        android:background="@drawable/selector_ll"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.loosoo100.campus100.view.RoundAngleImageView
            android:id="@+id/raiv_picture"
            android:layout_width="62.5dp"
            android:layout_height="62.5dp"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imgloading" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_title02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="系统消息"
                    android:textColor="@color/black_373737"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_red02"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/shape_circle_red" />

                <TextView
                    android:id="@+id/tv_time02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:20"
                    android:textColor="@color/gray_a1a1a1"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_content02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="您的商品正在派送中"
                android:textColor="@color/gray_a1a1a1"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>