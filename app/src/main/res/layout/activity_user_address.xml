<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_fd3c49" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_menuBar"
        android:background="@color/red_fd3c49" >

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/height_menuBar"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_back_white" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我的信息"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_topbar" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_headShot"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/selector_ll"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="我的头像"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_list" />

                <com.loosoo100.campus100.view.CircleView
                    android:id="@+id/cv_person"
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:layout_marginRight="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imgloading"
                    app:border_color="@color/none_color"
                    app:border_width="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:scaleY="2"
                    android:text=">"
                    android:textColor="@color/line_below" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/gray_efefee" />

            <LinearLayout
                android:id="@+id/ll_nickName"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/selector_ll"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="我的昵称"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_list" />

                <TextView
                    android:id="@+id/tv_nickName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.4"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:text="我的昵称"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:scaleY="2"
                    android:text=">"
                    android:textColor="@color/line_below" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/gray_efefee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="电话号码"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_list" />

                <TextView
                    android:id="@+id/tv_telephone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.4"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:text="电话号码"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

<!--                 <TextView -->
<!--                     android:layout_width="wrap_content" -->
<!--                     android:layout_height="match_parent" -->
<!--                     android:layout_marginRight="15dp" -->
<!--                     android:gravity="center" -->
<!--                     android:scaleY="2" -->
<!--                     android:text=">" -->
<!--                     android:textColor="@color/line_below" /> -->
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/gray_efefee" />

            <LinearLayout
                android:id="@+id/ll_basicInfo"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/selector_ll"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="基本信息"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_list" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:scaleY="2"
                    android:text=">"
                    android:textColor="@color/line_below" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/gray_efefee" />

            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/selector_ll"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="收货地址"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_list" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:scaleY="2"
                    android:text=">"
                    android:textColor="@color/line_below" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/gray_f8f8f8" />

            <LinearLayout
                android:id="@+id/ll_loginPass"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/selector_ll"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="登陆密码"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_list" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:scaleY="2"
                    android:text=">"
                    android:textColor="@color/line_below" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/gray_efefee" />

            <LinearLayout
                android:id="@+id/ll_payPass"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/selector_ll"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="支付密码"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_list" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:scaleY="2"
                    android:text=">"
                    android:textColor="@color/line_below" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/gray_efefee" />
        </LinearLayout>

        <include
            android:id="@+id/progress"
            layout="@layout/progress_update_blackbg"
            android:visibility="gone" />
    </RelativeLayout>

    <!-- <ImageView -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="9dp" -->
    <!-- android:background="@color/gray_f8f8f8" /> -->


