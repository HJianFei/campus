<?xml version="1.0" encoding="utf-8"?>
<com.loosoo100.campus100.imagepicker.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sel_grid_camera_bg" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_camera" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:layout_below="@id/iv_camera"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="拍摄照片"
            android:textColor="#CDCECE"
            android:textSize="14sp" />
    </RelativeLayout>

</com.loosoo100.campus100.imagepicker.widget.SquareLayout>