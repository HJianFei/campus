<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_gridview"
    android:layout_width="164dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_goodsIcon"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:scaleType="centerCrop"
        android:src="@drawable/imgloading" />

    <TextView
        android:id="@+id/tv_goodsName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:padding="5dp"
        android:text="商品名"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_goodsPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="￥0"
            android:textColor="@color/red_fd3c49"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/icon_collect_nocolor" />

            <TextView
                android:id="@+id/tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:text="0"
                android:textColor="@color/gray_d0d0d0"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>