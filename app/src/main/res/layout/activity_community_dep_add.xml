<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_menuBar"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/height_menuBar"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_back_black" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="社团架构"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_topbar" />

        <RelativeLayout
            android:id="@+id/rl_save"
            android:layout_width="@dimen/height_menuBar"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="保存"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_yellow_fcdd69"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_dep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/none_color"
            android:gravity="top"
            android:hint="请输入您的社团架构,不超过4个字"
            android:maxLength="4"
            android:minHeight="55dp"
            android:padding="5dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_wordCount"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="0/4"
            android:textColor="@color/gray_767779"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>