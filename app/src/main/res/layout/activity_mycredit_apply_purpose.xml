<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_fd3c49" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_menuBar"
        android:background="@color/red_fd3c49" >

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/height_menuBar"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_back_white" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="借款用途"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_topbar" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_01"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/selector_ll"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="22dp"
            android:text="学生生活"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_01"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginRight="22dp"
            android:gravity="center"
            android:src="@drawable/icon_select_not" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_line"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:background="@color/gray_efefee" />

    <LinearLayout
        android:id="@+id/ll_02"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/selector_ll"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="22dp"
            android:text="学习必需品"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_02"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginRight="22dp"
            android:gravity="center"
            android:src="@drawable/icon_select_not" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_line"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:background="@color/gray_efefee" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_line"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:background="@color/gray_efefee" />
    
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_margin="22dp"
        android:background="@drawable/selector_btn_red"
        android:text="确认"
        android:textColor="@color/white" />

</LinearLayout>