                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_line"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/gray_efefee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="详细地址"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_list" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/none_color"
                    android:paddingRight="15dp"
                    android:text=""
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_line"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/gray_efefee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="是否设定为默认地址"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_list" />

                <com.loosoo100.campus100.view.togglebutton.ToggleButton
                    android:id="@+id/toggleButton"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    toggle:tbBorderWidth="1dp"
                    toggle:tbOffBorderColor="@color/gray_5f5f5f"
                    toggle:tbOffColor="@color/gray_5f5f5f"
                    toggle:tbOnColor="@color/red_fd3c49"
                    toggle:tbSpotColor="@color/white" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_line"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/gray_efefee" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_margin="12dp"
                android:background="@drawable/selector_btn_red"
                android:text="保存"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_remark_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="注：亲，当用于小卖部收货地址时，所选学校要与小卖部的学校一致喔！"
                android:textColor="@color/gray_3e3e3e"
                android:textSize="12sp" />
