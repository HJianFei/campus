<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/city_rl_item_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/city_letter"
            android:layout_width="match_parent"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/gray_f8f8f8"
            android:paddingLeft="10dp"
            android:text="A"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/city_rl_item_2"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="@drawable/selector_city_search" >

        <TextView
            android:id="@+id/city_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="北京"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="25dp"
            android:background="@color/gray_efefee" />
    </RelativeLayout>

</LinearLayout>