<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_fd3c49" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_menuBar"
        android:background="@color/red_fd3c49" >

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/height_menuBar"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_back_white" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="认证"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_topbar" />

        <RelativeLayout
            android:id="@+id/rl_save"
            android:layout_width="@dimen/height_menuBar"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="上传"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="公司名称"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_company"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/none_color"
                        android:gravity="right|center_vertical"
                        android:hint="请输入公司名称"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <include layout="@layout/line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="营业执照号"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/background_with_shadow2"
                        android:gravity="right|center_vertical"
                        android:hint="请输入营业执照号"
                        android:inputType="number"
                        android:paddingRight="3dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <include layout="@layout/line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="经营范围"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/none_color"
                        android:gravity="right|center_vertical"
                        android:hint="请输入经营范围"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <include layout="@layout/line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="公司类型"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" >

                        <Button
                            android:id="@+id/btn_property"
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:background="@color/gray_efefee"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="25dp"
                            android:singleLine="true"
                            android:text="请选择"
                            android:textColor="@color/gray_5f5f5f"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignRight="@id/btn_property"
                            android:layout_marginRight="6dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/shape_triangle_white" />
                    </RelativeLayout>
                </LinearLayout>

                <include layout="@layout/line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="公司规模"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" >

                        <Button
                            android:id="@+id/btn_size"
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:background="@color/gray_efefee"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="25dp"
                            android:singleLine="true"
                            android:text="请选择"
                            android:textColor="@color/gray_5f5f5f"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignRight="@id/btn_size"
                            android:layout_marginRight="6dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/shape_triangle_white" />
                    </RelativeLayout>
                </LinearLayout>

                <include layout="@layout/line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="公司地址"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/none_color"
                        android:gravity="right|center_vertical"
                        android:hint="请输入公司地址"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <include layout="@layout/line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="法人代表"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_person"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/none_color"
                        android:gravity="right|center_vertical"
                        android:hint="请输入法人代表"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <include layout="@layout/line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="座机"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_phone01"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_with_shadow2"
                        android:gravity="right|center_vertical"
                        android:inputType="number"
                        android:paddingRight="3dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="1dp"
                        android:layout_margin="3dp"
                        android:background="@color/gray_d0d0d0" />

                    <EditText
                        android:id="@+id/et_phone02"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="2"
                        android:background="@drawable/background_with_shadow2"
                        android:gravity="right|center_vertical"
                        android:inputType="number"
                        android:paddingRight="3dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <include layout="@layout/line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="公司网址"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_host"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/none_color"
                        android:gravity="right|center_vertical"
                        android:hint="请输入公司网址"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <include layout="@layout/line_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="上传营业执照副本（可后期再补交）"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/add_pic" />

                    <ImageView
                        android:id="@+id/iv_pic"
                        android:layout_width="230dp"
                        android:layout_height="162dp"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.6"
                        android:scaleY="0.6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本人已阅读并同意"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《"
                        android:textColor="@color/blue_0090ff"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/btn_argeement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/none_color"
                        android:text="校园100平台企业入驻认证协议"
                        android:textColor="@color/blue_0090ff"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="》"
                        android:textColor="@color/blue_0090ff"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_protocol" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="为保障消费者的利益"
                        android:textColor="@color/red_fd3c49"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:text="认证企业须缴纳1000元保证金（期满退还）"
                    android:textColor="@color/red_fd3c49"
                    android:textSize="14sp" />
            </LinearLayout>
        </ScrollView>

        <include
            android:id="@+id/progress_update_whitebg"
            layout="@layout/progress_update_whitebg"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>