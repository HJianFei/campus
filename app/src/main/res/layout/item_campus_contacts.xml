<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_f9f9f9"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp" >

            <com.loosoo100.campus100.view.CircleView
                android:id="@+id/cv_headShot"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:scaleType="centerCrop"
                android:src="@drawable/imgloading"
                app:border_color="@color/none_color"
                app:border_width="0dp" />

            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/icon_male_picture" />

            <!-- <LinearLayout -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_below="@id/cv_headShot" -->
            <!-- android:gravity="center_vertical" -->
            <!-- android:orientation="horizontal" > -->


            <!-- <ImageView -->
            <!-- android:layout_width="20dp" -->
            <!-- android:layout_height="25dp" -->
            <!-- android:layout_marginRight="2dp" -->
            <!-- android:src="@drawable/campus_heartbeat_three" /> -->


            <!-- <TextView -->
            <!-- android:id="@+id/tv_ulcount" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:text="" -->
            <!-- android:textColor="@color/red_c74004" -->
            <!-- android:textSize="12sp" /> -->
            <!-- </LinearLayout> -->
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:background="@color/white_f9f9f9"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:background="@color/none_color"
                android:text="大师兄"
                android:textColor="@color/red_fd3c49"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@color/none_color"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="6"
                    android:text="这是内容"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- <Button -->
            <!-- android:id="@+id/btn_all" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_marginTop="2dp" -->
            <!-- android:background="@color/none_color" -->
            <!-- android:text="全文" -->
            <!-- android:textColor="@color/red_fd3c49" -->
            <!-- android:textSize="16sp" -->
            <!-- android:visibility="gone" /> -->

            <GridView
                android:id="@+id/gv_picture"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="5dp"
                android:horizontalSpacing="1dp"
                android:listSelector="@color/none_color"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="1dp" >
            </GridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/icon_location_red" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:singleLine="true"
                            android:text="学校"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:alpha="0.5"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="1分钟前"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_appraise_up"
                    android:layout_width="129dp"
                    android:layout_height="33dp"
                    android:background="@drawable/shape_gray_404040"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <LinearLayout
                        android:id="@+id/ll_like"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_contacts_collect" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="赞"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="23dp"
                        android:background="@color/black" />

                    <LinearLayout
                        android:id="@+id/ll_appraise"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_contacts_appraise" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="评论"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_dialog"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="3dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_contacts_message" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_root_appraise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:background="@drawable/icon_contacts_appraise_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_root_like"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/icon_contacts_collect_red" />

                    <TextView
                        android:id="@+id/tv_likeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="@color/red_fd3c49"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_efefee" />

                <ListView
                    android:id="@+id/lv_appraise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:listSelector="@color/none_color"
                    android:scrollbars="none" >
                </ListView>

                <Button
                    android:id="@+id/btn_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/none_color"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="全部/收起"
                    android:textColor="@color/red_fd3c49"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- <ImageView -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="@dimen/size_line" -->
    <!-- android:background="@color/gray_efefee" /> -->

</LinearLayout>