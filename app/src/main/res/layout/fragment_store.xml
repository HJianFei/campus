<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red_fd3c49" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_menuBar"
            android:background="@color/red_fd3c49" >

            <Button
                android:id="@+id/btn_campusName"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:background="@color/none_color"
                android:gravity="center"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="广州大学"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize_topbar" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignRight="@id/btn_campusName"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/shape_triangle_white" />

            <RelativeLayout
                android:id="@+id/rl_business"
                android:layout_width="@dimen/height_menuBar"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" >

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icon_business" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_top" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <com.loosoo100.campus100.view.AbScrollView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <ListView
                        android:id="@+id/lv_category"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:divider="@null"
                        android:scrollbars="none" >
                    </ListView>
                </LinearLayout>
            </com.loosoo100.campus100.view.AbScrollView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_category_top"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:background="@color/gray_f8f8f8"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:text="饮料酒水"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_list" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <!-- <com.loosoo100.campus100.view.AbScrollView -->
                    <!-- android:layout_width="match_parent" -->
                    <!-- android:layout_height="match_parent" -->
                    <!-- android:scrollbars="none" > -->


                    <!-- <LinearLayout -->
                    <!-- android:layout_width="match_parent" -->
                    <!-- android:layout_height="wrap_content" > -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ListView
                            android:id="@+id/lv_goods15"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:divider="@null"
                            android:listSelector="@color/none_color"
                            android:scrollbars="none" >
                        </ListView>

                        <ListView
                            android:id="@+id/lv_goods14"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:divider="@null"
                            android:listSelector="@color/none_color"
                            android:scrollbars="none" >
                        </ListView>

                        <ListView
                            android:id="@+id/lv_goods13"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:divider="@null"
                            android:listSelector="@color/none_color"
                            android:scrollbars="none" >
                        </ListView>

                        <ListView
                            android:id="@+id/lv_goods12"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:divider="@null"
                            android:listSelector="@color/none_color"
                            android:scrollbars="none" >
                        </ListView>

                        <ListView
                            android:id="@+id/lv_goods11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:divider="@null"
                            android:listSelector="@color/none_color"
                            android:scrollbars="none" >
                        </ListView>

                        <ListView
                            android:id="@+id/lv_goods10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:divider="@null"
                            android:listSelector="@color/none_color"
                            android:scrollbars="none" >
                        </ListView>

                        <ListView
                            android:id="@+id/lv_goods09"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:divider="@null"
                            android:listSelector="@color/none_color"
                            android:scrollbars="none" >
                        </ListView>

                        <ListView
                            android:id="@+id/lv_goods08"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:divider="@null"
                            android:listSelector="@color/none_color"
                            android:scrollbars="none" >
                        </ListView>

                        <ListView
                            android:id="@+id/lv_goods07"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:divider="@null"
                            android:listSelector="@color/none_color"
                            android:scrollbars="none" >
                        </ListView>

                        <ListView
                            android:id="@+id/lv_goods06"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:divider="@null"
                            android:listSelector="@color/none_color"
                            android:scrollbars="none" >
                        </ListView>

                        <ListView
                            android:id="@+id/lv_goods05"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:divider="@null"
                            android:listSelector="@color/none_color"
                            android:scrollbars="none" >
                        </ListView>

                        <ListView
                            android:id="@+id/lv_goods04"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:divider="@null"
                            android:listSelector="@color/none_color"
                            android:scrollbars="none" >
                        </ListView>

                        <ListView
                            android:id="@+id/lv_goods03"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:divider="@null"
                            android:listSelector="@color/none_color"
                            android:scrollbars="none" >
                        </ListView>

                        <ListView
                            android:id="@+id/lv_goods02"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:divider="@null"
                            android:listSelector="@color/none_color"
                            android:scrollbars="none" >
                        </ListView>

                        <ListView
                            android:id="@+id/lv_goods01"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:divider="@null"
                            android:listSelector="@color/none_color"
                            android:scrollbars="none" >
                        </ListView>
                    </RelativeLayout>

                    <!-- </LinearLayout> -->
                    <!-- </com.loosoo100.campus100.view.AbScrollView> -->


                    <!-- <include -->
                    <!-- android:id="@+id/progress_lv" -->
                    <!-- layout="@layout/progress" -->
                    <!-- android:visibility="gone" /> -->

                    <include
                        android:id="@+id/progress_lv"
                        layout="@layout/progress_custom"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_cart_root"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:clickable="true" >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:alpha="0.8"
                android:background="@drawable/shape_circle_black" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_cart" />

            <TextView
                android:id="@+id/tv_count_cart2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:minWidth="12dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_cart_root_pay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:alpha="0.8"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_cart" />

                    <TextView
                        android:id="@+id/tv_count_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/shape_count_cart"
                        android:gravity="center"
                        android:minWidth="12dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_cart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="bottom"
                    android:paddingBottom="10dp" >

                    <TextView
                        android:id="@+id/tv_totalMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥0.0"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/textsize_list" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" +配送费  "
                        android:textColor="@android:color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_expressFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥0.0"
                        android:textColor="@android:color/white"
                        android:textSize="10sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >

                    <Button
                        android:id="@+id/btn_select_ok"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/none_color"
                        android:clickable="false"
                        android:text="20元起送"
                        android:textColor="@android:color/white" >
                    </Button>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_cart_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="48dp"
            android:clickable="true"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:background="@android:color/black" />

            <RelativeLayout
                android:id="@+id/rl_cart"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_alignParentBottom="true"
                android:gravity="bottom" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="@color/gray_efefee"
                        android:clickable="true" >

                        <ImageView
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@color/red_fd3c49" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="6dp"
                            android:text="购物车"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/textsize_list" />

                        <LinearLayout
                            android:id="@+id/ll_clear_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical" >

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/icon_garbage_cart" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:gravity="center_vertical"
                                android:text="清除购物车"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_d0d0d0" />

                    <ListView
                        android:id="@+id/lv_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"
                        android:scrollbars="none" >
                    </ListView>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_again"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_btn_red"
                android:text="重新获取"
                android:textColor="@color/white" />
        </RelativeLayout>

        <include
            android:id="@+id/rl_pb"
            layout="@layout/progress"
            android:visibility="gone" />
    </RelativeLayout>

    <include
        layout="@layout/business_campus"
        android:visibility="gone" />

    <include
        layout="@layout/goods"
        android:visibility="gone" />

</RelativeLayout>