<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <com.loosoo100.campus100.view.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:background="@drawable/gift_together_bg"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp" >

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imgloading" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" >

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLines="2"
                                android:text="卡通橙色"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

<!--                             <TextView -->
<!--                                 android:layout_width="wrap_content" -->
<!--                                 android:layout_height="41dp" -->
<!--                                 android:layout_alignParentRight="true" -->
<!--                                 android:layout_marginRight="15dp" -->
<!--                                 android:layout_marginTop="10dp" -->
<!--                                 android:gravity="center" -->
<!--                                 android:scaleY="2" -->
<!--                                 android:text=">" -->
<!--                                 android:textColor="@color/line_below" /> -->
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_attr"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:alpha="0.7"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="颜色：橙色"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="25dp"
                                android:layout_marginLeft="5dp"
                                android:text="￥88.5"
                                android:textColor="@color/red_fd3c49"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/line_gray_big" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:progress="50"
                        android:progressDrawable="@drawable/progressbar_color" />

                    <TextView
                        android:id="@+id/tv_persent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:text="50%"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/gray_efefee" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal|bottom"
                    android:text="还差"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_moneyNotEnough"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:gravity="center_horizontal|top"
                    android:text="￥18.8"
                    android:textColor="@color/red_fd3c49"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/gray_efefee" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:text="凑一凑详情"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/line_gray_big" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:id="@+id/ll_noData"
                        android:layout_width="match_parent"
                        android:layout_height="192dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/gift_together_chair" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:alpha="0.5"
                            android:text="还没有小伙伴为您凑份子"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/listView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:divider="@color/none_color"
                        android:listSelector="@color/none_color"
                        android:scrollbars="none" />
                </RelativeLayout>
            </LinearLayout>
        </com.loosoo100.campus100.view.MyScrollView>

        <include
            android:id="@+id/progress"
            layout="@layout/progress"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:background="@color/red_fd3c49" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_menuBar"
                android:background="@color/none_color" >

                <RelativeLayout
                    android:id="@+id/rl_topbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_menuBar"
                    android:alpha="0"
                    android:background="@color/red_fd3c49"
                    android:clickable="true" />

                <RelativeLayout
                    android:id="@+id/rl_back"
                    android:layout_width="@dimen/height_menuBar"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/iv_back_bg"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true"
                        android:alpha="0.3"
                        android:background="@drawable/shape_circle_black" />

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/icon_back_white" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>