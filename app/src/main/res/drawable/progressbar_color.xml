<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 设置背景色（灰） -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:endColor="@color/gray_efefee"
                android:startColor="@color/gray_efefee" />
        </shape>
    </item>

    <!-- 设置进度条颜色（红） -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:endColor="@color/red_fd3c49"
                    android:startColor="@color/red_fd3c49" />
            </shape>
        </clip>
    </item>

</layer-list>